<Window x:Class="AIReplyHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIReplyHelper"
        mc:Ignorable="d"
        Title="AI Reply Helper - Quick Reply Generator" 
        Height="700" Width="950"
        MinHeight="600" MinWidth="800"
        Background="#F5F7FA"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Loaded="Window_Loaded" PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#8B5CF6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4338CA"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CBD5E1"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4F46E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <!--<Style TargetType="ComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
        </Style>-->

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#242424"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton 
                                Name="ToggleButton" 
                                Grid.Column="2"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border 
                                            x:Name="Border"
                                            Background="#F5F5F5"
                                            BorderThickness="0"
                                            CornerRadius="4">
                                            <Grid Margin="8,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <ContentPresenter 
                                                    Grid.Column="0"
                                                    Margin="4,0,8,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Content="{TemplateBinding Content}"/>

                                                <!-- MS Teams Style Chevron -->
                                                <Path 
                                                    Grid.Column="1"
                                                    x:Name="Arrow"
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"
                                                    Data="M 0 0 L 3.5 3.5 L 7 0"
                                                    Stroke="#616161"
                                                    StrokeThickness="1.5"
                                                    StrokeStartLineCap="Round"
                                                    StrokeEndLineCap="Round"
                                                    Margin="4,0,4,0">
                                                </Path>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#EBEBEB"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#E1E1E1"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#E1E1E1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter 
                                Name="ContentSite"
                                IsHitTestVisible="False"  
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                Margin="12,0,32,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"/>

                            <Popup 
                                Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True" 
                                Focusable="False"
                                PopupAnimation="Fade"
                                VerticalOffset="4">
                                <Grid 
                                    Name="DropDown"
                                    SnapsToDevicePixels="True"                
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border 
                                        x:Name="DropDownBorder"
                                        Background="White"
                                        BorderBrush="#E1E1E1"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="4">
                                        <Border.Effect>
                                            <DropShadowEffect 
                                                Color="#000000" 
                                                Opacity="0.08" 
                                                ShadowDepth="4" 
                                                BlurRadius="16"
                                                Direction="270"/>
                                        </Border.Effect>
                                        <ScrollViewer 
                                            Margin="0" 
                                            SnapsToDevicePixels="True"
                                            HorizontalScrollBarVisibility="Auto"
                                            VerticalScrollBarVisibility="Auto">
                                            <StackPanel 
                                                IsItemsHost="True" 
                                                KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style - MS Teams Inspired -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border 
                            x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Checkmark for selected item -->
                                <Path 
                                    x:Name="Checkmark"
                                    Grid.Column="0"
                                    Data="M 0 3 L 3 6 L 8 0"
                                    Stroke="#6264A7"
                                    StrokeThickness="1.5"
                                    StrokeStartLineCap="Round"
                                    StrokeEndLineCap="Round"
                                    Width="10"
                                    Height="8"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed"/>

                                <ContentPresenter 
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E8E8FF"/>
                                <Setter TargetName="Checkmark" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="#242424"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#DEDEFF"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Loading Animation -->
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingEllipse"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:1.5"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Toast Notification -->
        <Border x:Name="ToastNotification"
                Grid.Row="0"
                Background="#4F46E5"
                CornerRadius="8"
                Padding="16,12"
                Margin="0,0,0,15"
                Visibility="Collapsed"
                Height="Auto">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                  Opacity="0.3" 
                                  ShadowDepth="4" 
                                  BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="ToastIcon"
                           Grid.Column="0"
                           FontSize="20"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="ToastTitle"
                               Text="Notification"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    <TextBlock x:Name="ToastMessage"
                               Text="This is a message"
                               FontSize="13"
                               Foreground="#E0E7FF"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Button x:Name="ToastCloseButton"
                        Grid.Column="2"
                        Content="✕"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="18"
                        Width="32"
                        Height="32"
                        Cursor="Hand"
                        VerticalAlignment="Top"
                        Click="ToastClose_Click"
                        Margin="8,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="16"
                                                Padding="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3730A3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Header with Theme Toggle -->
        <Grid Visibility="Collapsed" Grid.Row="1" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="AI Reply Helper" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#1E293B"/>
                <TextBlock Text="Generate smart replies instantly" 
                           FontSize="14" 
                           Foreground="#64748B" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Token/Cost Info Bar -->
        <Border Grid.Row="2" 
                Background="#E2E8F0" 
                CornerRadius="8" 
                Padding="12,8"
                Margin="0,0,0,15">
            <Grid>
                <TextBlock x:Name="TokenInfoText"
                           FontSize="12"
                           Foreground="#92400E">
                    <Run Text="💰 Estimated cost: $0.00"/>
                    <Run Text=" | "/>
                    <Run Text="📊 Input: 0 chars"/>
                </TextBlock>
                <TextBlock HorizontalAlignment="Right"
                           FontSize="11"
                           Foreground="#92400E"
                           Text="Max input: 2000 chars"/>
            </Grid>
        </Border>

        <!-- Input Section -->
        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="12" 
                Padding="20"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="📩 Message" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="#334155"
                           Margin="0,0,0,10"/>

                <TextBox Grid.Row="1"
                         x:Name="InputTextBox"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         BorderThickness="0"
                         MaxLength="2000"
                         TextChanged="InputTextBox_TextChanged"/>
            </Grid>
        </Border>

        <!-- Controls -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <!-- Model Selector -->
                <TextBlock Text="🤖 Model:"
 FontSize="14"
 FontWeight="SemiBold"
 Foreground="#334155"
 VerticalAlignment="Center"
 Margin="0,0,12,0"/>

                <ComboBox x:Name="ModelSelector" 
Width="150" SelectionChanged="ModelSelector_SelectionChanged">
                    <ComboBoxItem Content="gpt-4o-mini" IsSelected="True"/>
                    <ComboBoxItem Content="gpt-4o"/>
                    <ComboBoxItem Content="gpt-3.5-turbo"/>
                </ComboBox>

                <TextBlock Text="🗣️ Tone:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#334155"
                           VerticalAlignment="Center"
                           Margin="10,0,12,0"/>

                <ComboBox x:Name="ToneComboBox" 
                          Width="200"
                          SelectedIndex="0">
                    <ComboBoxItem Content="😊 Polite"/>
                    <ComboBoxItem Content="🤗 Friendly"/>
                    <ComboBoxItem Content="💼 Professional"/>
                    <ComboBoxItem Content="😄 Funny"/>
                    <ComboBoxItem Content="📝 Casual"/>
                </ComboBox>


            </StackPanel>

            <Button Grid.Column="1"
                    x:Name="CancelButton"
                    Content="⏹️ Cancel"
                    Style="{StaticResource DangerButton}"
                    Click="CancelButton_Click"
                    Width="120"
                    Margin="0,0,10,0"
                    Visibility="Collapsed"/>

            <Button Grid.Column="2"
                    x:Name="GenerateButton"
                    Content="⚡ Generate Reply"
                    Style="{StaticResource ModernButton}"
                    Click="GenerateButton_Click"
                    Width="180">
                <Button.ToolTip>
                    <ToolTip Content="Ctrl+G"/>
                </Button.ToolTip>
            </Button>
        </Grid>

        <!-- Output Section with Loading Overlay -->
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="20"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="✨ Generated Reply" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="#334155"
                               Margin="0,0,0,10"/>

                    <TextBox Grid.Row="1"
                             x:Name="OutputTextBox"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             BorderThickness="0"
                             IsReadOnly="True"
                             Background="#F8FAFC"/>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay"
                    Background="#F0FFFFFF"
                    CornerRadius="12"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse x:Name="LoadingEllipse"
                             Width="50" 
                             Height="50"
                             Stroke="#4F46E5"
                             StrokeThickness="4"
                             StrokeDashArray="10 5"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <TextBlock Text="Generating reply..."
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#4F46E5"
                               Margin="0,15,0,0"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LoadingTimeText"
                               Text="0s"
                               FontSize="12"
                               Foreground="#94A3B8"
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="6" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusTextBlock"
                           Text="Ready"
                           FontSize="13"
                           Foreground="#64748B"
                           VerticalAlignment="Center"/>
                <Button x:Name="UndoButton"
                        Content="↶"
                        Style="{StaticResource ModernButton}"
                        Background="#6B7280"
                        Width="40"
                        Padding="0"
                        Margin="15,0,0,0"
                        Click="UndoButton_Click"
                        IsEnabled="False"
                        ToolTip="Undo (Ctrl+Z)"/>
            </StackPanel>

            <Button Grid.Column="1"
                    x:Name="CopyButton"
                    Content="📋 Copy"
                    Style="{StaticResource SecondaryButton}"
                    Click="CopyButton_Click"
                    Width="120"
                    Margin="0,0,10,0"
                    Background="#10B981"
                    IsEnabled="False">
                <Button.ToolTip>
                    <ToolTip Content="Ctrl+Shift+C"/>
                </Button.ToolTip>
            </Button>

            <Button Grid.Column="2"
                    x:Name="HistoryButton"
                    Content="🕓 History"
                    Style="{StaticResource ModernButton}"
                    Background="#6366F1"
                    Click="HistoryButton_Click"
                    Width="120"
                    Margin="0,0,10,0">
                <Button.ToolTip>
                    <ToolTip Content="Ctrl+H"/>
                </Button.ToolTip>
            </Button>

            <Button Grid.Column="3"
                    x:Name="ExportButton"
                    Content="📤 Export"
                    Style="{StaticResource ModernButton}"
                    Background="#3B82F6"
                    Click="ExportButton_Click"
                    Width="120"
                    Margin="0,0,10,0"/>

            <Button Grid.Column="4"
                    x:Name="SettingsButton"
                    Content="⚙️ Settings"
                    Style="{StaticResource ModernButton}"
                    Background="#6B7280"
                    Click="SettingsButton_Click"
                    Width="120">
                <Button.ToolTip>
                    <ToolTip Content="Ctrl+,"/>
                </Button.ToolTip>
            </Button>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="7" 
                Background="#EEF2FF" 
                CornerRadius="8" 
                Padding="15">
            <Grid>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="💡 Tip:" FontWeight="Bold" Foreground="#4F46E5"/>
                    <Run Text=" Use Ctrl+G to generate, Ctrl+Shift+C to copy, Ctrl+Z to undo!" 
                         Foreground="#64748B"/>
                </TextBlock>
                <Button Visibility="Collapsed" x:Name="CheckUpdateButton"
                        Content="🔄 Check Updates"
                        Style="{StaticResource ModernButton}"
                        Background="Transparent"
                        Foreground="#4F46E5"
                        Padding="10,5"
                        FontSize="11"
                        HorizontalAlignment="Right"
                        Click="CheckUpdate_Click"/>
            </Grid>
        </Border>
    </Grid>

</Window>
