<Window x:Class="AIReplyHelper.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIReplyHelper"
        mc:Ignorable="d"
         Title="History - AI Reply Helper" 
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4338CA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🕓 Reply History" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="#1E293B"/>
            <TextBlock Text="Last 5 generated replies" 
                       FontSize="13" 
                       Foreground="#64748B"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- History List -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="HistoryItemsControl" Padding="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F8FAFC" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="5"
                                    BorderBrush="#E2E8F0"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header with Tone and Time -->
                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#4F46E5" 
                                                    CornerRadius="4" 
                                                    Padding="8,4">
                                                <TextBlock Text="{Binding Tone}" 
                                                           Foreground="White"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"/>
                                            </Border>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:MMM dd, HH:mm}'}" 
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="↩️ Use"
                                                Style="{StaticResource ModernButton}"
                                                Click="UseButton_Click"
                                                Tag="{Binding}"/>
                                    </Grid>

                                    <!-- Original Message -->
                                    <TextBlock Grid.Row="1" 
                                               Text="Original Message:" 
                                               FontWeight="SemiBold"
                                               FontSize="12"
                                               Foreground="#475569"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding OriginalMessage}" 
                                               TextWrapping="Wrap"
                                               FontSize="12"
                                               Foreground="#64748B"
                                               Margin="0,0,0,10"
                                               MaxHeight="60"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Generated Reply -->
                                    <Border Grid.Row="3" 
                                            Background="White" 
                                            CornerRadius="6" 
                                            Padding="10"
                                            BorderBrush="#E2E8F0"
                                            BorderThickness="1">
                                        <TextBlock Text="{Binding GeneratedReply}" 
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Foreground="#334155"
                                                   MaxHeight="80"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Button x:Name="ClearHistoryButton"
                    Content="🗑️ Clear All"
                    Style="{StaticResource ModernButton}"
                    Background="#EF4444"
                    HorizontalAlignment="Left"
                    Width="130"
                    Click="ClearHistoryButton_Click"/>
            <Button Content="Close"
                    Style="{StaticResource ModernButton}"
                    Background="#94A3B8"
                    HorizontalAlignment="Right"
                    Width="120"
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>

</Window>
